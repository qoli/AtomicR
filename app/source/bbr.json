{
  "version": "2",
  "name": "bbr",
  "category": "server",
  "data": [
    {
      "type": "title",
      "value": "信息"
    },
    {
      "type": "status",
      "value": "BBR 状态",
      "action": "echo $(sysctl net.ipv4.tcp_available_congestion_control)"
    },
    {
      "type": "title",
      "value": "安装"
    },
    {
      "type": "action",
      "value": "更新软件源并安装 Git",
      "action": "apt-get update && apt-get -y install git"
    },
    {
      "type": "action",
      "value": "克隆脚本内容到服务器",
      "action": "git clone https://github.com/flyzy2005/ss-fly"
    },
    {
      "type": "action",
      "value": "安装 BBR",
      "action": "~/ss-fly/ss-fly.sh -bbr"
    }
  ]
}